journal = {Proceedings of the IEEE},
keywords = {Defenses against tracking,future of tracking,tracking discovery,tracking implications,tracking mechanisms,user identification,web tracking},
number = {8},
pages = {1476--1510},
title = {{A Survey on Web Tracking: Mechanisms, Implications, and Defenses}},
url = {https://ieeexplore-ieee-org.turing.library.northwestern.edu/stamp/stamp.jsp?tp={\&}arnumber=7872467},
