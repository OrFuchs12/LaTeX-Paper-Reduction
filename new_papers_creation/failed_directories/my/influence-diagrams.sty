\newcommand{\setdiamondutility}{
  \tikzset{
    utility/.style  = {utilityd},
  }
}

\newcommand{\setchamferedutility}{
  \tikzset{
    utility/.style  = {utilityc=##1},
  }
}

\newlength{\minimum@size}
\newcommand{\setminimumsize}[1]{
  \setlength{\minimum@size}{#1}
}
\newlength{\inner@sep}
\newcommand{\setinnersep}[1]{
  \setlength{\inner@sep}{#1}
}
\newlength{\@margin}
\newcommand{\setmargin}[1]{
  \setlength{\@margin}{#1}
}

\newcommand{\setcompactsize}[1][]{
  \tikzset{>={Latex[length=2mm,width=1.5mm]}}
  \setminimumsize{5mm}
  \setinnersep{0.5mm}
  \setmargin{0.5mm}
  \tikzset{
    node distance=0.3cm and 0.4cm,
    every node/.append style={minimum size=\minimum@size, inner sep=\inner@sep},
    chamf/.default = {2pt},
    #1,
  }
  \small
}

\newcommand{\setnormalsize}[1][]{
  \tikzset{>={Latex[length=2.5mm,width=2mm]}}
  \setminimumsize{8mm}
  \setinnersep{1mm}
  \setmargin{1mm}
  \tikzset{
    node distance=0.7cm,
    every node/.append style={minimum size=\minimum@size, inner sep=\inner@sep},
    chamf/.default = {3pt},
    #1,
    }
}

\newcommand{\setcircularnodes}[1][]{
  \setdiamondutility
  \tikzset{
    every node/.append style={circle},
    #1,
    }
}

\newcommand{\setrectangularnodes}[1][]{
  \setchamferedutility
  \tikzset{
    every node/.append style={rectangle, rounded corners=5},
    #1,
    }
}

\if@rectangularnodes
\setrectangularnodes
\else
\setcircularnodes
\fi

\newenvironment{influence-diagram}[1][]%
{
  \begin{tikzpicture}
  \tikzset{
      every node/.style = {draw, align=center}
  }
    \if@compact
    \setcompactsize
    \else
    \setnormalsize
    \fi
    \if@rectangularnodes
    \setrectangularnodes
    \else
    \setcircularnodes
    \fi
    \tikzset{
      #1
    }
  }{
    \end{tikzpicture}
  }


% function to extract the text inside a node
\protected\def\tikz@fig@main#1{%
  \expandafter\gdef\csname labeltextof@\tikz@fig@name\endcsname{#1}%
  \iftikz@node@is@pic%
    \tikz@node@is@picfalse%
    \tikz@subpicture@handle{#1}%
  \else%
    \tikz@@fig@main#1\egroup%
    \fi}

\newcommand\labeltextof[1]{\csname labeltextof@#1\endcsname}

\newcommand{\surroundnode}[2]{
  \node at (#1) [node contents={\labeltextof{#1}}, text opacity =0, inner
  sep=\inner@sep+\@margin, minimum size=\minimum@size+2\@margin, #2];
}

\newcommand{\controlincentive}[2][]{\surroundnode{#2}{control incentive,#1}}
\newcommand{\listeningincentive}[2][]{\surroundnode{#2}{listening incentive,#1}}
\newcommand{\interventionincentive}[2][]{\surroundnode{#2}{intervention incentive,#1}}
\newcommand{\observationincentive}[2][]{\surroundnode{#2}{observation incentive,#1}}


